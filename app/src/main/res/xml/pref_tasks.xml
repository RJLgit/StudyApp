<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <MultiSelectListPreference
        android:key="settings_key_category"
        android:title="Select categories to show"
        android:entries="@array/categories"
        android:entryValues="@array/categories"
        android:defaultValue="@array/categories"
        />

    <ListPreference
        android:key="settings_key_sort"
        android:title="Sort by"
        android:entries="@array/sort_array"
        android:entryValues="@array/sort_array"
        android:summary="%s"
        android:defaultValue="Date"
        />

</PreferenceScreen>