<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/container_item_view">

    <TextView
        android:id="@+id/task_title_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_category_item_view" />

    <TextView
        android:id="@+id/task_priority_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="priority"
        app:layout_constraintStart_toEndOf="@+id/task_title_item_view"
        app:layout_constraintTop_toTopOf="@+id/task_title_item_view" />

    <TextView
        android:id="@+id/task_category_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/action_spinner"
        android:layout_width="124dp"
        android:layout_height="20dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/task_category_item_view"
        app:layout_constraintTop_toBottomOf="@+id/task_category_item_view" />

    <Button
        android:id="@+id/action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Take Action"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/action_spinner"
        app:layout_constraintStart_toStartOf="@+id/action_spinner"
        app:layout_constraintTop_toBottomOf="@+id/action_spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>